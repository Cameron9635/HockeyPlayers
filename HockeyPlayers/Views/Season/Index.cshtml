@model IEnumerable<HockeyPlayers.Models.Season>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Start Date
        </th>
        <th>
            End Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Champion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Champion)
        </td>
